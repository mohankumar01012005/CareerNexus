# SkillCompass Backend Environment Configuration
# Copy this file to .env and update the values

# =============================================
# SERVER CONFIGURATION
# =============================================
NODE_ENV=development
PORT=5000
API_VERSION=1.0.0

# =============================================
# DATABASE CONFIGURATION
# =============================================
# MongoDB connection string
MONGODB_URI=mongodb://localhost:27017/skillcompass

# Database options
DB_MAX_POOL_SIZE=10
DB_TIMEOUT=5000

# =============================================
# JWT CONFIGURATION
# =============================================
# JWT secret key (use a strong, random string in production)
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=24h

# =============================================
# FRONTEND CONFIGURATION
# =============================================
# Frontend URL for CORS
FRONTEND_URL=http://localhost:3000

# =============================================
# EMAIL CONFIGURATION
# =============================================
# SMTP settings for sending emails
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password

# Email settings
FROM_EMAIL=noreply@skillcompass.com
FROM_NAME=SkillCompass

# =============================================
# FILE UPLOAD CONFIGURATION
# =============================================
# Cloudinary for file uploads (optional)
CLOUDINARY_CLOUD_NAME=your-cloud-name
CLOUDINARY_API_KEY=your-api-key
CLOUDINARY_API_SECRET=your-api-secret

# Local file upload settings
UPLOAD_PATH=uploads/
MAX_FILE_SIZE=10485760

# =============================================
# SECURITY CONFIGURATION
# =============================================
# Rate limiting
RATE_LIMIT_WINDOW=900000
RATE_LIMIT_MAX=100

# Session settings
SESSION_SECRET=your-session-secret-key
SESSION_TIMEOUT=86400000

# =============================================
# LOGGING CONFIGURATION
# =============================================
LOG_LEVEL=info
LOG_FILE=logs/app.log

# =============================================
# DEVELOPMENT SETTINGS
# =============================================
# Seed database on startup (development only)
SEED_DATABASE=true

# Enable debug mode
DEBUG=skillcompass:*

# =============================================
# PRODUCTION SETTINGS
# =============================================
# SSL/TLS settings (production only)
SSL_CERT_PATH=/path/to/ssl/cert.pem
SSL_KEY_PATH=/path/to/ssl/key.pem

# Monitoring and analytics
SENTRY_DSN=your-sentry-dsn
GOOGLE_ANALYTICS_ID=your-ga-id

# =============================================
# THIRD-PARTY INTEGRATIONS
# =============================================
# AI/ML services (optional)
OPENAI_API_KEY=your-openai-api-key
HUGGING_FACE_API_KEY=your-hugging-face-key

# Notification services
SLACK_WEBHOOK_URL=your-slack-webhook
TEAMS_WEBHOOK_URL=your-teams-webhook

# =============================================
# BACKUP CONFIGURATION
# =============================================
# Database backup settings
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30
BACKUP_STORAGE_PATH=backups/

# Cloud backup (optional)
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_REGION=us-east-1
AWS_S3_BUCKET=skillcompass-backups